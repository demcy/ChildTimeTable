@using System.Collections
@using Domain
@model Domain.Obligation

@{
    ViewData["Title"] = "Edit";
}


<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ParentId" />
    <input type="hidden" asp-for="TimeId" />


    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Time.StartTime" class="control-label"></label>
                <input asp-for="Time.StartTime" class="form-control" value="@ViewBag.StartTime"/>
                <span asp-validation-for="Time.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Time.EndTime" class="control-label"></label>
                <input asp-for="Time.EndTime" class="form-control" value="@ViewBag.EndTime"/>
                <span asp-validation-for="Time.EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location.LocationValue" class="control-label">Location</label>
                <input asp-for="Location.LocationValue" class="form-control" list="Locations" value="@ViewBag.LValue"/>
                <datalist id="Locations">
                    @foreach (SelectListItem location in (IEnumerable) ViewData["LocationValue"])
                    {
                        <option value="@location.Value"/>
                    }
                </datalist>
                <span asp-validation-for="Location.LocationValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ObligationType" class="control-label"></label>
                <select asp-for="ObligationType" class="form-control" asp-items="@Html.GetEnumSelectList<ObligationType>()"></select>
                <span asp-validation-for="ObligationType" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
                </label>
            </div>
        </div>
        <div class="col-md-8">
            <div class="form-group">
                <label class="control-label">To</label>
                <select id="selectFullName" name="fullName" class="form-control" asp-items="ViewBag.FullName" ></select>
            </div>
            <div class="form-group">
                <label asp-for="Body" class="control-label"></label>
                <textarea asp-for="Body" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>
            <div class="form-group d-flex flex-row-reverse">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        let scriptFullName = document.getElementById("selectFullName");
        scriptFullName.selectedIndex = @ViewBag.ChildIndex;
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
