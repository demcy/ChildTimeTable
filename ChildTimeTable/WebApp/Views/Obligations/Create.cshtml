@using System.Collections
@using Domain
@model ObligationModel

@{
    ViewData["Title"] = "Create";
}


<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Obligation.Time.StartTime" class="control-label"></label>
                <input asp-for="Obligation.Time.StartTime" class="form-control" value="@Model.Data"/>
                <span asp-validation-for="Obligation.Time.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Obligation.Time.EndTime" class="control-label"></label>
                <input asp-for="Obligation.Time.EndTime" class="form-control" value="@Model.Data"/>
                <span asp-validation-for="Obligation.Time.EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Obligation.Location.LocationValue" class="control-label">Location</label>
                <input asp-for="Obligation.Location.LocationValue" class="form-control" list="Locations"/>
                <datalist id="Locations">
                    @foreach (SelectListItem location in Model.LocationValues!)
                    {
                        <option value="@location.Value"/>
                    }
                </datalist>
                <span asp-validation-for="Obligation.Location.LocationValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Obligation.ObligationType" class="control-label"></label>
                <select asp-for="Obligation.ObligationType" class="form-control" asp-items="@Html.GetEnumSelectList<ObligationType>()"></select>
                <span asp-validation-for="Obligation.ObligationType" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-8">
            <div class="form-group">
                <label class="control-label">To</label>
                <select name="fullName" class="form-control" asp-items="Model.FullNames"></select>
            </div>
            <div class="form-group">
                <label asp-for="Obligation.Body" class="control-label"></label>
                <textarea asp-for="Obligation.Body" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Obligation.Body" class="text-danger"></span>
            </div>
            <div class="form-group d-flex flex-row-reverse">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
    
    
</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
