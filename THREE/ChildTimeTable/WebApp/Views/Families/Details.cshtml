@using Domain
@model Domain.Family

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Family</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FamilyValue)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FamilyValue)
        </dd>
    </dl>
   
    @foreach (var item in Model.Persons)
    {
        <dl class="col-sm-2">
            <dt class="col-sm-2">
                "NAME"
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayName(item.FirstName)
            </dd>
        </dl>
        <dl class="col-sm-2">
            <dt class="col-sm-2">
                "ROLE"
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayName(item.PersonTypeId.ToString())
            </dd>
        </dl>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.FamilyId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
