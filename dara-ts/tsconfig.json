{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2017",

        "alwaysStrict": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "downlevelIteration": true,
        "importHelpers": true,

        "sourceMap": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "moduleResolution": "node",
        "lib": [
            "DOM", "DOM.Iterable",
            "ESNext",
        ]
    },
    "include": [
        "global.d.ts", "./src/**/*"
    ],
    "exclude": [
        "node_modules",
    ]
}
